<%= form_with( model: movie, local: true) do |f|%>
  <%= f.label :title %>
  <%= f.text_field :title, autofocus: true %>

  <%= f.label :description %>
  <%= f.text_area :description, rows: 10 %>

  <%= f.label :rating %>
  <%= f.select :rating, Movie::RATINGS, prompt: 'Pick One' %>

  <%= f.label :released_on %>
  <%= f.date_select :released_on, {}, {class: "date"} %>

  <%= f.label :total_gross %>
  <%= f.number_field :total_gross %>

  <%= f.label :director %>
  <%= f.text_field :director %>

  <%= f.label :duration %>
  <%= f.text_field :duration %>

  <%= f.label :image_file_name %>
  <%= f.select :image_file_name, Movie::IMGS, prompt: 'Pick One' %>

  <%= f.submit data: { disable_with: false } %>
<% end %>
